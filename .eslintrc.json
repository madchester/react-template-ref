{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended",
      "airbnb"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "Notification": "readonly",
      "document": "readonly",
      "fetch": "readonly",
      "localStorage": "readonly",
      "navigator": "readonly",
      "window": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "react-hooks"
  ],
  "rules": {
      "indent": [
          "error",
          2,
          { "SwitchCase": 1 }
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "arrow-parens": [
          "error",
          "as-needed"
      ],
      "valid-typeof": "off",
      "react/jsx-props-no-spreading": [ "warn", {
        "exceptions": [ "Route", "Component", "PublicProvider", "PrivateProvider", "C" ]
      }],
      "max-len": [ "warn", { "ignoreComments": true, "code": 150 }],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-filename-extension": "warn",
      "jsx-a11y/alt-text": "off",
      "react/prop-types": "off",
      "no-alert": "off"
  },
  "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
              "node_modules",
              "src/"
          ]
        }
      }
    }
}
